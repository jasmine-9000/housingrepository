<%- include('partials/header') -%>

<main class="container mx-auto">
  <div class="row justify-content-center">
    <section class="col-6 mt-5 dark:text-white">
      <h1 class="text-3xl">Login</h1>
      <!-- display errors. -->
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> <% } %>

      <!-- login form-->
      <form action="/login" method="POST">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="block light:text-gray-700 text-sm font-bold mb-2"
            >Email address</label
          >
          <input
            type="email"
            class="shadow appearance-none border border-red-500 rounded py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="block light:text-gray-700 text-sm font-bold mb-2">Password</label>
          <input
            type="password"
            class="shadow appearance-none border border-red-500 rounded py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
            id="exampleInputPassword1"
            name="password"
          />
        </div>
        <button type="submit" class="btn btn-blue">Login</button>
      </form>
    </section>
  </div>
  <div class="row">
      <section class="col-6 mt-5 mb-5 dark:text-white">

        Need an account? <a class="btn btn-blue" href="/signup">Sign up!</a>
      </section>
  </div>
</main>

<%- include('partials/footer') -%>
