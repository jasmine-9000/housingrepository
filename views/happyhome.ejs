<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2 class="text-xl"><%= happyhome.name %></h2>
      <img class="img-fluid" src="<%= happyhome.image%>" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/happyHome/likeHappyHome/<%= happyhome.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= happyhome.likes %></h3>
        <%if(happyhome.user == user.id){ %>
        <form
          action="/happyHome/deleteHappyHome/<%= happyhome.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= happyhome.address %></p>
    </div>
    <div>
      <div class="mt-5">
        <h2>Add a comment</h2>
        <form action="/comment/add/<%=happyhome._id%>" method="POST">
          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <input
              type="text"
              class="form-control"
              id="comment"
              name="comment"
            />
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <h1>Current user: <%= user.userName %></h1>
      <ul>
        <% for( let i = 0; i < comments.length; i++ ) { %>
          <li><%= comments[i].comment %> left by <%= comments[i].user.userName %></li>
          <% if (comments[i].user == user.id)  { %>
            <% /* match value but not type. they are of different types. */ %> 
          <form
            action="/comment/delete/<%= comments[i]._id %>?_method=DELETE&happyhomeid=<%= happyhome._id %> "
            method="POST"
          >
            <button type="submit" class="btn btn-primary fa fa-trash"></button>
          </form>
          <% } %>
        <% } %>
      </ul>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
