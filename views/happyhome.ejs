      <p><%- happyhome.description %></p>
      <p class="text-2xl">Features:</p>
      <% if(happyhome.options) {%>
        <% happyhomeoptions.forEach((option) => { %>
            <% if(option in happyhome.options) { %>
              <p>‚úîÔ∏è <%= happyhomeoptionshtml[option] %></p>
            <% } else { %> 
