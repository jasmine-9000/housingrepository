          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <input
              type="text"
              class="form-control"
              id="comment"
              name="comment"
            />
          </div>
          <button type="submit" class="btn btn-blue">Submit</button>
        </form>
        <% } else { %>
        <div class="mb-3">

          <a href="/login" class="btn btn-blue">Login to Comment</a>
        </div>
        <% } %>
      </div>
      <% if(user.id !== 0) { %> 
      <h1>Current user: <%= user.userName %></h1>
      <% } %>
      <h1 class="text-2xl">Comments</h1>
      <% if(comments.length > 0) { %>

      
      <ul>
        <% for( let i = 0; i < comments.length; i++ ) { %>
          <li>
            
            <% /* render partial for comment. */%>
            <%- include('partials/comment', {comment: comments[i], user: user, happyhomeid: happyhome._id})%>
            
        </li>
        <% } %>
